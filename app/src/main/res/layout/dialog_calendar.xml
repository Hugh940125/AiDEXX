<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_dialog_confirm"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp" />

        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:calendar_height="50dp"
            app:current_day_lunar_text_color="?appColorAccent"
            app:current_day_text_color="?appColorAccent"
            app:current_month_lunar_text_color="?textColorPrimary"
            app:current_month_text_color="?textColorPrimary"
            app:max_select_range="-1"
            app:min_select_range="-1"
            app:month_view="com.microtechmd.cgms.widget.CustomRangeMonthView"
            app:other_month_lunar_text_color="?textColorHint"
            app:other_month_text_color="?textColorHint"
            app:select_mode="single_mode"
            app:selected_lunar_text_color="?colorAccent"
            app:selected_text_color="@color/white"
            app:selected_theme_color="?appColorAccent"
            app:week_background="?containerBackground"
            app:week_bar_height="25dp"
            app:week_text_color="?textColorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_cancel"
                style="@style/btnDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/btn_cancel" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?containerBackgroundDark" />

            <TextView
                android:id="@+id/bt_ok"
                style="@style/btnDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/btn_ok" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>