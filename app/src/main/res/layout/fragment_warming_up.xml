<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.home.panel.WarmingUpFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guide_line"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel_warm_up"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide_line"
        app:layout_constraintBottom_toBottomOf="@id/guide_line"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">

        <View
            android:background="@drawable/bg_panel_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_panel_blank"/>

        <View
            android:background="@drawable/bg_panel_warm_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_panel"/>

        <TextView
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_unit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:id="@+id/tv_remain"
            android:textColor="@color/black_33"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_place_holder"
            android:textSize="35sp"/>

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_remain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_below="@id/tv_remain"
            android:id="@+id/tv_unit"
            android:textColor="@color/black_33"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/min"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:maxEms="8"
        android:ellipsize="end"
        android:textColor="?snTextColor"
        android:layout_marginEnd="20dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_states"
        android:id="@+id/tv_warming_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warming_up"
        android:textAlignment="viewEnd"
        android:textSize="18sp" />

    <TextView
        android:visibility="gone"
        android:text="@string/insert_sensor_error"
        android:maxEms="10"
        android:id="@+id/tv_states"
        android:ellipsize="end"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_warming_up"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>