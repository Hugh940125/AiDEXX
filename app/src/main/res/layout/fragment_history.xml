<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_container_color"
    app:layout_constraintBottom_toTopOf="@id/layout_state"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:contentDescription="logo"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxEms="8"
        android:src="@drawable/ic_logo"
        android:text="@string/title_history"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTimeSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:textColor="?appColorAccent"
        android:textSize="18sp"
        tools:text="2022-11-11" />

    <ImageView
        android:id="@+id/btn_previous_day"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_title"
        app:layout_constraintRight_toLeftOf="@+id/tvTimeSelected"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_triangle_left" />

    <ImageView
        android:id="@+id/btn_next_day"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_title"
        app:layout_constraintLeft_toRightOf="@+id/tvTimeSelected"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_triangle_right" />

    <com.microtech.aidexx.widget.ScrollTab
        android:id="@+id/stIndicator"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeSelected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="46dp"
        android:background="@color/transparent"
        app:lib_pub_stab_avag="true"
        app:lib_pub_stab_indicatorColor="@color/light_colorAccent"
        app:lib_pub_stab_indicatorPadding="37dp"
        app:lib_pub_stab_indicatorType="translation"
        app:lib_pub_stab_indicatorWeight="3dp"
        app:lib_pub_stab_indicatorWidth="25dp"
        app:lib_pub_stab_type="view" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/page_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/stIndicator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>

