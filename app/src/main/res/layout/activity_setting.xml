<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_setting_header"
        android:background="@drawable/bg_setting_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_actionbar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:id="@+id/iv_setting_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_setting_scan"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_basic_info"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/rl_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.microtech.aidexx.widget.NiceImageView
                android:src="@mipmap/ic_launcher"
                tools:ignore="ImageContrastCheck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_setting_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                app:border_color="@color/green_65"
                app:border_width="3dp"
                app:is_circle="true" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/iv_setting_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="?settingItemTitleTextColor"
                    android:textStyle="bold"
                    android:text="胖乎乎的小娘们"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="查看并编辑个人信息"
                    android:textColor="?colorHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/shape_rounded_setting"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/cl_user_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@id/tv_share"
                android:id="@+id/tv_welfare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:text="福利中心"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_setting_welfare" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@id/tv_help"
                android:id="@+id/tv_share"
                app:layout_constraintStart_toEndOf="@id/tv_welfare"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:text="分享/关注"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_setting_share" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_help"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:text="帮助中心"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_setting_help" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_setting_header"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/shape_rounded_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.microtech.aidexx.widget.SettingItemWidget
                android:id="@+id/setting_trans"
                app:has_next="true"
                app:icon="@drawable/ic_trans"
                app:title="@string/setting_transmitter"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>