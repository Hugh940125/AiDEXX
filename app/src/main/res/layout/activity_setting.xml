<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_setting_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rl_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_setting_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_setting_scan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/rl_actionbar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_setting_avatar"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微泰动态测试"
                    android:textColor="?settingItemTitleTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="查看并编辑个人信息"
                    android:textColor="?colorHint"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.microtech.aidexx.widget.NiceImageView
                android:id="@+id/iv_setting_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:src="@mipmap/ic_launcher"
                app:border_color="@color/green_65"
                app:border_width="3dp"
                app:is_circle="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_rounded_setting"
            app:layout_constraintTop_toBottomOf="@id/cl_user_basic_info">

            <TextView
                android:id="@+id/tv_welfare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="福利中心"
                android:textSize="14sp"
                app:drawableTopCompat="@drawable/ic_setting_welfare"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_share"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="分享/关注"
                android:textSize="14sp"
                app:drawableTopCompat="@drawable/ic_setting_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_help"
                app:layout_constraintStart_toEndOf="@id/tv_welfare"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="帮助中心"
                android:textSize="14sp"
                app:drawableTopCompat="@drawable/ic_setting_help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_share"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_setting_header">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_rounded_setting"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_trans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_trans"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="@string/setting_transmitter" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_alert"
                    app:layout_constraintTop_toBottomOf="@id/setting_trans"
                    app:title="@string/alert_setting" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_line="false"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_unit"
                    app:layout_constraintTop_toBottomOf="@id/setting_alert"
                    app:title="@string/setting_glucose_unit" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_rounded_setting"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_language"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="@string/setting_language" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_theme"
                    app:layout_constraintTop_toBottomOf="@id/setting_language"
                    app:title="@string/setting_theme" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_other"
                    app:layout_constraintTop_toBottomOf="@id/setting_theme"
                    app:title="@string/setting_other" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/setting_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:has_line="false"
                    app:has_next="true"
                    app:icon="@drawable/ic_setting_about"
                    app:layout_constraintTop_toBottomOf="@id/setting_other"
                    app:title="@string/setting_about" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>