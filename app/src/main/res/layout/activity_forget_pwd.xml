<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.microtech.aidexx.widget.ActionBarWidget
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_back"
        app:titleText="@string/reset" />

    <LinearLayout
        style="@style/baseMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="?attr/bgSetting"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_username"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="?attr/bgSetting"
                android:drawableStart="@drawable/ic_fun_4"
                android:drawablePadding="10dp"
                android:hint="@string/phone"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <include layout="@layout/layout_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_code"
                    style="@style/MyEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="?attr/bgSetting"
                    android:drawableStart="@drawable/ic_fun_5"
                    android:drawablePadding="10dp"
                    android:hint="@string/Verificationcode"
                    android:inputType="number"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                <TextView
                    android:id="@+id/btn_get_code"
                    style="@style/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/send"
                    app:emojiCompatEnabled="false" />
            </LinearLayout>

            <include layout="@layout/layout_line" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_pwd"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/bgSetting"
                android:drawableStart="@drawable/ic_fun_6"
                android:drawablePadding="10dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <include layout="@layout/layout_line" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_pwd_confirm"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/bgSetting"
                android:drawableStart="@drawable/ic_fun_6"
                android:drawablePadding="10dp"
                android:hint="@string/ConfirmPassword"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

        </LinearLayout>

    </LinearLayout>


    <com.microtech.aidexx.widget.button.StateButton
        android:id="@+id/button_regist"
        style="@style/StateButtonRaised"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="@string/btn_ok" />


</LinearLayout>
