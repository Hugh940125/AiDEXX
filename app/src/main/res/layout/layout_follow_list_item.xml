<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_follow_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bg_follow_list_item"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel_glucose"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        >

        <View
            android:background="@drawable/bg_panel_blank_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_panel"/>

        <TextView
            app:emojiCompatEnabled="false"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_unit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal|bottom"
            android:id="@+id/tv_glucose_value"
            android:textColor="@color/black_33"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="6.8"
            android:textSize="20sp"/>

        <TextView
            app:emojiCompatEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_glucose_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:includeFontPadding="false"
            android:gravity="center_horizontal|top"
            android:id="@+id/tv_unit"
            android:textColor="@color/black_33"
            android:textSize="10sp"
            android:text="mmol/L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/timeLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/latestValueTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_place_holder"
            android:textColor="@color/share_label"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/leftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left_day"
            android:textColor="@color/share_label"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="司徒李昂"
        android:textColor="@color/share_label"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeLl"
        android:gravity="end"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:id="@+id/ivSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_selected_user_label"
        />

</androidx.constraintlayout.widget.ConstraintLayout>