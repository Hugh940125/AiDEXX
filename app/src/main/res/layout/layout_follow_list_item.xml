<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/list_follow_root"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_b2"
        android:id="@+id/account_pos"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/account_pos"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="11"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="18sp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/cb_is_select"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_go_see_see"
        tools:ignore="ContentDescription" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/gray_e6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>