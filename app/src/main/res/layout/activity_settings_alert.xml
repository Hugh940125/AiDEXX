<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context=".ui.setting.alert.AlertSettingsActivity">

    <com.microtech.aidexx.widget.ActionBarWidget
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_back"
        app:titleText="@string/alert_setting" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/common_notice"
                android:textColor="?attr/settingItemValueTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="?attr/bgSetting"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/alert_mode"
                    android:textColor="?attr/settingItemTitleTextColor"
                    android:textSize="?attr/settingItemTitleTextSize"
                    android:textStyle="bold" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/notice_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_next="true"
                    app:has_line="true"
                    app:title="@string/notice_method" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/notice_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_next="true"
                    app:has_line="true"
                    app:title="@string/notice_frequency" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/notice_content"
                    android:textColor="?attr/settingItemTitleTextColor"
                    android:textSize="?attr/settingItemTitleTextSize"
                    android:textStyle="bold" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/hypo_alert_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_switch="true"
                    app:title="@string/Guide_Low_Alert_Title" />

<!--                APP-SRC-A-2-7-->
                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/hypo_threshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_next="true"
                    app:title="@string/low_threshold" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/hyper_alert_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_switch="true"
                    app:title="@string/Guide_High_Alert_Title" />

<!--                APP-SRC-A-2-8-->
                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/hyper_threshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_next="true"
                    app:title="@string/High_Glucose" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/siw_raise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_switch="true"
                    app:title="@string/Rise_Rate" />

                <com.microtech.aidexx.widget.SettingItemWidget
                    android:id="@+id/siw_fall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:has_switch="true"
                    app:has_next="false"
                    app:has_line="false"
                    app:title="@string/Fall_Rate" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/urgent_notice"
                android:textColor="?attr/settingItemValueTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="?attr/bgSetting"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/siw_urgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:has_switch="true"
                        app:title="@string/Urgent_Low_Alarm" />

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/low_urgent_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:title="@string/low_urgent_value" />

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/notice_method_urgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:has_next="true"
                        app:has_line="true"
                        app:title="@string/notice_method" />

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/notice_frequency_urgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:has_next="true"
                        app:has_line="false"
                        app:title="@string/notice_frequency" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/system_notice"
                android:textColor="?attr/settingItemValueTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="?attr/bgSetting"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

                <LinearLayout
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/siw_signal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:has_line="true"
                        app:has_switch="true"
                        app:title="@string/Signal_Loss" />

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/notice_method_signal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:has_next="true"
                        app:has_line="true"
                        app:title="@string/notice_method" />

                    <com.microtech.aidexx.widget.SettingItemWidget
                        android:id="@+id/notice_frequency_signal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:has_next="true"
                        app:has_line="false"
                        app:title="@string/notice_frequency" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="6dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>