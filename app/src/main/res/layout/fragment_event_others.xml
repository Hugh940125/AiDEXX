<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_round_corner"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                app:emojiCompatEnabled="false"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_others_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/record_time"
                android:textColor="@color/event_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                app:emojiCompatEnabled="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/tv_others_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:textColor="@color/event_switch_content"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_others_time_title"
                tools:text="2022/05/03 15:36" />

            <View
                android:id="@+id/others_divider1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@color/event_line"
                app:layout_constraintTop_toBottomOf="@id/tv_others_time" />

            <TextView
                app:emojiCompatEnabled="false"
                android:id="@+id/tv_others_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/record_content"
                android:textColor="@color/event_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/others_divider1" />

            <EditText
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:minHeight="200dp"
                android:id="@+id/et_others_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@color/transparent"
                android:hint="@string/hint_input_other"
                android:gravity="start"
                android:textColor="@color/event_switch_content"
                android:textColorHint="@color/event_hint"
                android:textSize="14sp"
                android:maxLength="500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_others_name_title" />

            <View
                android:id="@+id/others_divider2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@color/event_line"
                app:layout_constraintTop_toBottomOf="@id/et_others_content" />

            <TextView
                app:emojiCompatEnabled="false"
                android:id="@+id/tv_sport_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/history_record"
                android:textColor="@color/event_label"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/others_divider2" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_others_history"
                app:layout_constraintTop_toBottomOf="@id/tv_sport_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_others_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sport_history_title" />

                <TextView
                app:emojiCompatEnabled="false"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_others_no_record"
                    android:textColor="@color/event_switch_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sport_history_title"
                    android:text="@string/no_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/ll_others_history" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/bt_save_others"
        android:clickable="true"
        android:text="@string/save"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:rv_backgroundColor="@color/green_65"
        app:rv_backgroundPressColor="@color/green_7400"
        app:rv_cornerRadius="4dp"
        app:rv_strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
