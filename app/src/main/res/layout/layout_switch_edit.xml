<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="6dp"
    android:layout_height="wrap_content"
    android:id="@+id/cl_edit_item">

    <TextView
                app:emojiCompatEnabled="false"
        app:layout_constraintEnd_toStartOf="@id/edit_item_switch"
        android:layout_marginTop="10dp"
        android:id="@+id/switch_edit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="?mainTabIconColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="********" />

    <androidx.appcompat.widget.SwitchCompat
        app:layout_constraintStart_toEndOf="@id/switch_edit_title"
        android:id="@+id/edit_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:checked="true"
        android:thumb="@drawable/switch_thumb"
        app:layout_constraintBottom_toBottomOf="@id/switch_edit_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/switch_edit_title"
        app:track="@drawable/switch_track" />

    <TextView
                app:emojiCompatEnabled="false"
        android:id="@+id/edit_item_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="?trendSmallTextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_edit_title"
        tools:text="********" />

    <View
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_divider"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_item_info"
        android:background="?attr/colorLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>