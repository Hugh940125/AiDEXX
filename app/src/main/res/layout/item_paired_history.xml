<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/shape_rounded_setting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/ic_setting_trans"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="62dp"
            android:layout_height="62dp"/>

        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/history_device_sn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/history_device_time"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            tools:text="AH010101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:id="@+id/history_device_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_device_sn"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            tools:text="AH010101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>