<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.home.panel.GlucosePanelFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guide_line"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel_glucose"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide_line"
        app:layout_constraintBottom_toBottomOf="@id/guide_line"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_weight="1">

        <View
            android:background="@drawable/bg_panel_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_panel"/>

        <TextView
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_unit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:id="@+id/tv_glucose_value"
            android:textColor="@color/black_33"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_place_holder"
            android:textSize="35sp"/>

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_glucose_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:id="@+id/tv_unit"
            android:textColor="@color/black_33"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/guide_line"
        app:layout_constraintBottom_toBottomOf="@id/guide_line"
        app:layout_constraintStart_toEndOf="@id/panel_glucose"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            tools:text="1分钟前"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="?valueTimeTextColor"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_value_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textSize="18sp" />

        <TextView
            tools:text="传感器异常\n请等待恢复"
            android:maxLines="2"
            android:visibility="visible"
            android:id="@+id/tv_glucose_state"
            android:ellipsize="end"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            tools:text="剩余11天"
            android:lines="1"
            android:visibility="visible"
            android:id="@+id/tv_sensor_remain_time"
            android:ellipsize="end"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>