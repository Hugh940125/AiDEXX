<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?bgNav"
    android:orientation="vertical">

    <com.microtech.aidexx.widget.ActionBarWidget
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/my_qr_code_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_back"
        app:titleText="@string/my_qr_code" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_qr_code"
        android:background="@drawable/shape_rounded_setting"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/my_qr_code_action_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_margin="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        app:layout_constraintTop_toBottomOf="@id/ll_qr_code"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_send_qr_code"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/send_to_friend"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:rv_backgroundColor="@color/green_65"
        app:rv_backgroundPressColor="@color/green_7400"
        app:rv_cornerRadius="4dp"
        app:rv_strokeWidth="1dp" />

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:textColor="?trendSmallTextColor"
        android:text="@string/share_by_wechat_tip"
        app:layout_constraintTop_toBottomOf="@id/btn_send_qr_code"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>